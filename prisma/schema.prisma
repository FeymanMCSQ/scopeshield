// prisma/schema.prisma
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  // NOTE: In your system, User.id is supplied from ss_uid (guest_...) via upsert.
  // Keeping @default(cuid()) is misleading; we remove it so schema matches reality.
  id        String          @id
  createdAt DateTime        @default(now())
  updatedAt DateTime? @updatedAt

  // Auth bridge fields (Phase 1)
  isGuest    Boolean        @default(true)
  email      String?
  clerkUserId String?       @unique

  clients   Client[]
  requests  ChangeRequest[]
}


model Client {
  id        String          @id @default(cuid())
  name      String
  createdAt DateTime        @default(now())

  userId    String
  user      User            @relation(fields: [userId], references: [id])

  requests  ChangeRequest[]

  @@unique([userId, name])

}

model ChangeRequest {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  publicId  String   @unique @default(cuid()) // <-- add this

  message   String
  price     Int
  status    String
  assetUrl  String?

  userId    String
  clientId  String

  user      User     @relation(fields: [userId], references: [id])
  client    Client   @relation(fields: [clientId], references: [id])

  ticketPins TicketPin[]
}

model TicketPin {
  id        String   @id @default(cuid())
  ticketId  String
  x         Float    // normalized [0..1]
  y         Float    // normalized [0..1]
  note      String?  // optional text
  createdAt DateTime @default(now())

  ticket ChangeRequest @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
}
