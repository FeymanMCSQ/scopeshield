{
  "manifest_version": 3,
  "name": "ScopeShield (Dev)",
  "version": "0.0.1",
  "action": {
    "default_title": "ScopeShield",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://app.slack.com/*",
        "https://*.slack.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
