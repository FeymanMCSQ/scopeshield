{
  "manifest_version": 3,
  "name": "ScopeShield (Dev)",
  "version": "0.0.1",
  "permissions": ["storage"],
  "action": {
    "default_title": "ScopeShield",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://app.slack.com/*",
        "https://*.slack.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://scopeshield.vercel.app/*"
      ],
      "js": ["pairing.js"],
      "run_at": "document_idle"
    }
  ]
}
